<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="show" />

        <Button
            android:id="@+id/btn_remove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="remove" />

        <Button
            android:id="@+id/btn_ops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Authorize app suspension permissions" />

        <Switch
            android:id="@+id/sw_autoalign"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text=" automatic align" />

        <Switch
            android:id="@+id/sw_modely"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text=" Modal window (events cannot penetrate the floating window)" />

        <Switch
            android:id="@+id/sw_move"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text=" draggable" />

        <Switch
            android:id="@+id/sw_notification"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text=" notification" />

        <Switch
            android:id="@+id/sw_popupVertical"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="popup vertical" />

        <Switch
            android:id="@+id/sw_popUpVertical2"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="vertical bottom" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/timer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Timer settings"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/lineris"
                android:layout_below="@+id/timer_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/hrs"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:focusable="auto"
                    android:text="Hrs: "
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/time_hrs"
                    android:layout_width="53dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/sw_notification"
                    android:layout_alignLeft="@+id/sw_notification"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:ems="10"
                    android:hint="Enter"
                    android:inputType="number"
                    android:singleLine="false"
                    android:text="0" />

                <TextView
                    android:id="@+id/min"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:focusable="auto"
                    android:text="min: "
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/time_min"
                    android:layout_width="53dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/sw_notification"
                    android:layout_alignLeft="@+id/sw_notification"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:ems="10"
                    android:hint="Enter"
                    android:inputType="number"
                    android:singleLine="false"
                    android:text="0"
                    tools:text="0" />

                <TextView
                    android:id="@+id/sec"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:focusable="auto"
                    android:text="sec:"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/time_sec"
                    android:layout_width="53dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/sw_notification"
                    android:layout_alignLeft="@+id/sw_notification"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:ems="10"
                    android:hint="Enter"
                    android:inputType="number"
                    android:singleLine="false"
                    android:text="0" />
            </LinearLayout>


            <Button
                android:id="@+id/buttonSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lineris"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:text="Submit time" />

        </RelativeLayout>


    </LinearLayout>
</ScrollView>